.container {
  padding: 30rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100%;
  height: 100%;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.login-btn {
  font-size: 28rpx;
  color: #1296db;
  background: none;
  border: none;
  padding: 0;
  line-height: 1;
}

.login-btn::after {
  border: none;
}

.study-stats {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.stats-item {
  text-align: center;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1296db;
  display: block;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

.menu-list {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

.study-progress {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.progress-header {
  margin-bottom: 20rpx;
}

.progress-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.progress-item {
  margin-bottom: 20rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.progress-name {
  font-size: 28rpx;
  color: #333;
}

.progress-value {
  font-size: 24rpx;
  color: #666;
}

.about-section {
  text-align: center;
  padding: 30rpx 0;
}

.version {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

.copyright {
  font-size: 24rpx;
  color: #999;
}
