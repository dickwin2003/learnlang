.container {
  padding: 20rpx;
}

.tab-header {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
}

.tab-item {
  padding: 10rpx 30rpx;
  font-size: 32rpx;
  color: #666;
}

.tab-item.active {
  color: #1296db;
  border-bottom: 2px solid #1296db;
}

.gojuon-table {
  width: 100%;
}

.row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.cell {
  width: 18%;
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 10rpx;
}

.cell.has-sound {
  background: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.cell.empty {
  background: transparent;
  box-shadow: none;
}

.character {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.romaji {
  font-size: 24rpx;
  color: #666;
}

.stroke-order {
  margin-top: 40rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
}

.stroke-order .title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.stroke-canvas {
  width: 100%;
  height: 300rpx;
  background: #f8f8f8;
}
